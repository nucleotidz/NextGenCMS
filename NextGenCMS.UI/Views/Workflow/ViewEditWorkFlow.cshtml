@{
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" ng-click="closePopup();"><span aria-hidden="true">&times;</span></button>
    <div class="settingicon pull-left"><span class="glyphicon glyphicon-transfer"></span></div><h4 class="modal-title" id="myModalLabel">View Edit Work Flow</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-xs-12">
            <h2>{{wf.desc}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="form-group">
                <label for="Owner">Owner</label>
                <input type="text" class="form-control" ng-disabled="wf.disable" ng-model="wf.Owner" placeholder="Owner" />
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="form-group">
                <label for="Owner">Priority</label>
                <input type="text" class="form-control" ng-disabled="wf.disable" ng-model="wf.Priority" placeholder="Priority" />
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="form-group">
                <label for="DueDate">Due Date</label>
                <input autocomplete="off" class="form-control"
                       kendo-date-picker="datepicker" ng-disabled="wf.disable"
                       k-format="'dd-MM-yyyy'"
                       ng-model="wf.DueDate" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4">
            <div class="form-group">
                <label for="Status">Status</label>
                <select class="" kendo-drop-down-list
                        k-options="StatusOption"
                        k-option-label="'(Select Status)'"
                        ng-model="wf.Status"></select>
            </div>
        </div>
        <div class="col-xs-12 col-sm-8 col-md-8">
            <div class="form-group">
                <label for="File">File</label>
                <span class="glyphicon glyphicon-paperclip"></span><a href ng-click="DownloadFile(wf.fileId)"> {{wf.fileName}}</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-12">
            <div class="form-group">
                <label for="DueDate">Comment</label>
                <textarea class="form-control"></textarea>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default">Approve</button>

    <button type="button" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-primary" ng-if="wf.TaskEnable">End Task</button>
    <button type="button" class="btn btn-danger">Reject</button>
    <button type="button" class="btn btn-primary" ng-if="wf.ActionEnable" ng-click="closePopup();">Close</button>
</div>
