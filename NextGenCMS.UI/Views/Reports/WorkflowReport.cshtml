@{
    Layout = null;
}
<script>
    $(document).ready(function () {
        $("#treeview").kendoTreeView();

    });
</script>

<div class="twoCols clearfix">
    <div class="menuColumn col-xs-12 col-md-3">
        <ul id="treeview" class="reportMenus">
            <li data-expanded="true">
                Work Flow
                <ul>
                    <li class="active"><span title="Active" ng-click="vm.getActiveWorkflows();">Active</span></li>
                    <li><span title="Completed" ng-click="vm.getCompletedWorkflows();">Completed</span></li>
                </ul>
            </li>
            <li data-expanded="true">
                Due
                <ul>
                    <li><span title="Today" ng-click="vm.getWorkflowsDueToday();">Today</span></li>
                    <li><span title="Tomorrow" ng-click="vm.getWorkflowsDueTomorrow();">Tomorrow</span></li>
                    <li><span title="Next 7 Days" ng-click="vm.getWorkflowsDueNext7Days();">Next 7 Days</span></li>
                    <li><span title="Overdue" ng-click="vm.getWorkflowsOverdue();">Overdue</span></li>
                    <li><span title="No Date" ng-click="vm.getWorkflowsNoDueDate();">No Date</span></li>
                </ul>
            </li>
            <li data-expanded="true">
                Started
                <ul>
                    <li><span title="Last 7 Days" ng-click="vm.getWorkflowsStartedinLast7days();">Last 7 Days</span></li>
                    <li><span title="Last 14 Days" ng-click="vm.getWorkflowsStartedinLast14days();">Last 14 Days</span></li>
                    <li><span title="Last 28 Days" ng-click="vm.getWorkflowsStartedinLast28days();">Last 28 Days</span></li>
                </ul>
            </li>
            <li data-expanded="true">
                Priority
                <ul>
                    <li><span title="High" ng-click="vm.getWorkflowsHighPriority();">High</span></li>
                    <li><span title="Medium" ng-click="vm.getWorkflowsMediumPriority();">Medium</span></li>
                    <li><span title="Low" ng-click="vm.getWorkflowsLowPriority();">Low</span></li>
                </ul>
            </li>
            @*<li data-expanded="true">
                    Workflow Type
                    <ul>
                        <li>New Task</li>
                        <li><span title="Review and Approve (group review)">Review and Approve (group review)</span></li>
                        <li><span title="Review and Approve (one or more reviewers)">Review and Approve (one or more reviewers)</span></li>
                        <li><span title="Review and Approve (pooled review)">Review and Approve (pooled review)</span></li>
                        <li><span title="Review And Approve (single reviewer)">Review And Approve (single reviewer)</span></li>
                    </ul>
                </li>*@
        </ul>
    </div>
    <div class="col-xs-12 col-md-9 paddRight">
        <div class="mainContent">
            <div class="row margin0">
                <h3>{{vm.header}}</h3>
            </div>
            <div class="row">
                <div class="noListItem" ng-show="vm.noRecordExist">{{vm.noWorkflows}}</div>
                <div kendo-list-view id="listView" k-data-source="source">
                    <div k-template>
                        <ul class="reportList">
                            <li><h4><a href="">{{dataItem.message}}</a></h4></li>
                            <li><label>Title</label><span>: {{dataItem.title}}</span></li>
                            <li><label>Description</label><span>: {{dataItem.description}}</span></li>
                            <li class="clearfix">
                                <div class="col-sm-4 padd0"><label>Started by</label><span>: {{dataItem.username}}</span></div>
                                <div class="col-sm-3 padd0"><label>Due Date</label><span>: {{ dataItem.dueDate}}</span></div>
                                <div class="col-sm-5 padd0"><label>Completed</label><span>: {{dataItem.endDate}}</span></div>
                            </li>
                            <li class="clearfix">
                                <div class="col-sm-4 padd0"><label>Started</label><span>: {{ dataItem.startDate}}</span></div>
                                <div class="col-sm-3 padd0"><label>Priority</label><span>: {{dataItem.priority}}</span></div>
                                <div class="col-sm-5 padd0"><label>Status</label><span>: {{dataItem.status}}</span></div>
                            </li>
                        </ul>
                    </div>
                    <div kendo-pager k-data-source="source"></div>
                </div>
            </div>
        </div>
    </div>
</div>
