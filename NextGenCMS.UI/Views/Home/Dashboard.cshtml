@{
    Layout = null;
}

<div class="row">
    <ul class="breadcrumb">
        <li><a href="#">Dashboard</a></li>
    </ul>
</div>
<div class="row">
    <div class="btnPane">
        <span class="blueText glyphicon glyphicon-info-sign"></span><span class="blueText infoText"> Hi Admin, What would you like to do today?</span>
    </div>
</div>
<div class="row">
    <div class="column col-xs-12 col-md-9">
        <ul class="iconLinks">
            <li>
                <a href="#"><span class="glyphicon  glyphicon-info-sign"></span><span class="iconText">About Us</span></a>
            </li>
            <li>
                <a ui-sref=".Folder"><span class="glyphicon glyphicon-file"></span><span class="iconText">Document Library</span></a>
            </li>
            <li>
                <a ui-sref=".Admin"><span class="glyphicon glyphicon-user"></span><span class="iconText">Admin</span></a>
            </li>
            <li>
                <a ui-sref=".Search"><span class="glyphicon glyphicon-search"></span><span class="iconText">Search</span></a>
            </li>
            <li>
                <a href="#"><span class="glyphicon glyphicon-envelope"></span><span class="iconText">Email</span></a>
            </li>
            <li>
                <a ui-sref=".TaskList"><span class="glyphicon glyphicon-th-list"></span><span class="iconText">WorkList</span></a>
            </li>
            <li>
                <a ui-sref=".MyWorkflow"><span class="glyphicon glyphicon-cog"></span><span class="iconText">My Workflow</span></a>
            </li>
            <li>
                <a href="#"><span class="glyphicon glyphicon-cog"></span><span class="iconText">Feature 2</span></a>
            </li>
        </ul>
        </div>
    <div class="column col-xs-12 col-md-3">
        <div class="row">
            <div class="gnrlInfoBox">
                <div class="gnrlInfoBoxHead"><span class="anoucement glyphicon glyphicon-envelope"></span><h5>Messages</h5></div>
                <p class="infoContent">You have <span style="color:blue;font-weight:bold">{{vm.data.taskCount | number}}</span> new tasks!!</p>
                <p class="infoContent">You have <span style="color:blue;font-weight:bold">two</span> file's' checked out!!</p>
                <div class="supportTicket">
                    <button type="button" class="btn btn-primary btn-sm bluebtn whiteText">Clear</button>
                </div>
            </div>
        </div>
        </div>
    </div>
