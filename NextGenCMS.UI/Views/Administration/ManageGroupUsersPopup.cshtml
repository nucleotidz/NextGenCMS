@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" ng-click="closePopup();"><span aria-hidden="true">&times;</span></button>
    <div class="settingicon pull-left"><span class="glyphicon glyphicon-user"></span></div><h4 class="modal-title" id="myModalLabel">Manage Users</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-xs-12">
            <h2>Users</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="input-group">
                <input type="text" class="form-control" ng-model="search.text" placeholder="Search User/Group" />
                <div class="input-group-addon" ng-click="searchUser();" style="cursor:pointer;"><span class="glyphicon glyphicon-search" /></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 demo-section k-content">
            <select kendo-list-box k-options="selectOptions1" id="optional" title="Optional"></select>
            <select name="selected" id="selected" kendo-list-box k-options="selectOptions2" title="Selected"></select>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" ng-click="closePopup();">Close</button>
    <button type="button" class="btn btn-primary" ng-click="manageUsers();">Save</button>
</div>