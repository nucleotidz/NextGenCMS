@{
    Layout = null;
}

<div class="row">
    <ul class="breadcrumb">
        <li><a ui-sref="Home.Admin">Administration</a></li>
        <li>Group Management</li>
    </ul>
</div>
<div class="btnPane">
    <div class="row">
        <div class="col-xs-4 pull-right">
            <div class="input-group">
                <input type="text" class="form-control" ng-model="vm.searchText" placeholder="Search Group">
                <div class="input-group-addon" ng-click="vm.searchGroup();" style="cursor:pointer;"><span class="glyphicon glyphicon-search" /></div>
            </div>
        </div>
        <div class="col-xs-8">
            <button type="button" class="btn btn-primary btn-sm bluebtn whiteText pull-left" ng-click="vm.addGroup();">Create Group<span class="glyphicon glyphicon-plus"></span></button>
        </div>
    </div>
</div>
<br />

<div id="groupGrid"
     kendo-grid
     k-options="vm.groupGridOptions"
     k-data-source="vm.groupDataSource">
</div>
