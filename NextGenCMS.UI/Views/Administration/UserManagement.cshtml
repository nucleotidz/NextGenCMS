@{
    Layout = null;
}

<div class="row">
    <ul class="breadcrumb">
        <li><a ui-sref="#">Administration</a></li>
        <li>User Management</li>
    </ul>
</div>
<div class="btnPane">
    <div class="row">
        <div class="col-xs-2">
            <h5>Search User</h5>
        </div>
        <div class="col-xs-4 pull-left">
            <div class="input-group">
                <input type="text" class="form-control" id="search" placeholder="Search">
                <div class="input-group-addon" ng-click="vm.SearchUser();"><span class="glyphicon glyphicon-search" /></div>
            </div>
        </div>
        <div class="col-xs-6">
            <button type="button" class="btn btn-primary btn-sm bluebtn whiteText pull-right" ng-click="vm.addUser();">Create User<span class="glyphicon glyphicon-plus"></span></button>
        </div>
    </div>
</div>
<br />
<kendo-tabstrip>
    <ul>
        <li class="k-state-active" href="#">Users</li>
    </ul>
    <div id="userGrid"
         kendo-grid
         k-options="vm.userGridOptions"
         k-data-source="vm.userDataSourve">
    </div>
