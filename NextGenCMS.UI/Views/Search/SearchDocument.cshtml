@{
    Layout = null;
}

<div class="row">
    <ul class="breadcrumb">
        <li><a ui-sref="#">Administration</a></li>
        <li>Search</li>
    </ul>
</div>
<div class="btnPane">       
    <div class="col-xs-6 col-sm-6">
        <div class="input-group">
            <input type="text" class="form-control" id="searchdoc" placeholder="Search" ng-model="vm.searchKey">
            <div class="input-group-addon" ng-click="vm.SearchFile();"><span class="glyphicon glyphicon-search" /></div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="checkbox">
            <label>
                <input type="checkbox" id="IsContent" ng-model="vm.IsContent"> Search in content
            </label>
        </div>
    </div>
    
</div>
<div class="row">
</div>
<div id="searchGrid"
     kendo-grid
     k-options="vm.searchGridOptions"
     k-data-source="vm.searchGridDataSourve">
</div>
