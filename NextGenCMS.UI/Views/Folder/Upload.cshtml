@{
    Layout = null;
}


<div class="modal-header">
    <button type="button" class="close" ng-click="closePopup();"><span aria-hidden="true">&times;</span></button>
    <div class="settingicon pull-left"><span class="glyphicon glyphicon-folder-open"></span></div><h4 class="modal-title" >Upload File</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-xs-12">
            <h2>Upload File</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-12">
            <div class="form-group">
                <label for="name">Upload<span class="redStar">*</span></label>
                <input name="files"
                       type="file"
                       kendo-upload="fileAttachment"
                       k-success="onUpload"
                       k-select="onSelect"
                       k-multiple="true"
                       k-remove="onRemove"
                       k-autoupload="true"
                       />

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-12">
        </div>
        <div class="col-xs-12" id="dropZone"></div>
        </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="UploadFile();">Ok</button>
                <button type="button" class="btn btn-default" ng-click="closePopup();">Close</button>
            </div>
        </div>
